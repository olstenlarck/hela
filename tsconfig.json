{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2018"],
    /* Outputs: */
    "target": "es2018",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "importHelpers": false, // Do not use tslib for helper code
    /* Syntax: */
    "strict": true,
    "pretty": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "downlevelIteration": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": ["dist", "node_modules"]
}
