{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext", "es2015", "es2016", "es2017", "es2018"],
    "paths": {
      "*": ["packages/*/src", "node_modules/*"],
      "@tunnckocore/*": ["@tunnckocore/*/src"],
      "@hela/*": ["@hela/*/src"]
    },
    "rootDir": "./",
    "baseUrl": "./",
    "noEmit": true,
    "declaration": false,
    "emitDeclarationOnly": false
  },
  "include": ["packages", "@tunnckocore", "@hela"],
  "exclude": ["node_modules"]
}
