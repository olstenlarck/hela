{
  "private": true,
  "version": "0.1.0",
  "name": "@tunnckocore/hela-monorepo",
  "description": "WIP: Powerful software development experience",
  "author": "Charlike Mike Reagent <opensource@tunnckocore.com>",
  "repository": "tunnckocorehq/hela",
  "homepage": "https://github.com/tunnckocorehq/hela",
  "license": "MPL-2.0",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "start": "yarn node -r esm ./packages/hela-cli/src/cli.js",
    "cleanup": "rm -rf dist packages/*/dist",
    "commit": "yarn start commit",
    "postcommit": "yarn release",
    "now-build": "git status",
    "release": "git push && yarn run x:version && yarn run x:publish",
    "x:version": "lerna version --conventional-commits --no-changelog --sign-git-commit --sign-git-tag",
    "x:publish": "lerna publish from-git --pre-dist-tag next --dist-tag next"
  },
  "hela": "./packages/hela-dev/src/index.js",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@hela/cli": "^3.0.0-alpha.55",
    "@tunnckocore/config": "^4.0.1",
    "lerna": "^3.15.0",
    "typescript": "^3.5.2"
  },
  "renovate": {
    "extends": [
      "config:base",
      ":onlyNpm",
      ":gitSignOff",
      ":automergePr",
      ":automergeAll",
      ":respectLatest",
      ":rebaseStalePrs",
      ":semanticCommits",
      ":disableRateLimiting",
      ":preserveSemverRanges",
      ":maintainLockFilesWeekly"
    ]
  },
  "jest-runner-eslint": {
    "cliOptions": {
      "format": "codeframe",
      "quiet": true,
      "cache": true,
      "fix": true
    }
  },
  "devDependencies": {
    "esm": "^3.2.25"
  }
}
