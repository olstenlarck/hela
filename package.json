{
  "private": true,
  "name": "@hela/monorepo",
  "version": "0.0.0",
  "description": "WIP: Powerful software development experience",
  "author": "Charlike Mike Reagent <opensource@tunnckocore.com>",
  "license": "MPL-2.0",
  "workspaces": [
    "commands/*",
    "packages/*",
    "presets/*"
  ],
  "scripts": {
    "test": "echo testing",
    "setup": "yarn test && yarn build:all",
    "fresh": "rm -rf yarn.lock .pnp.js .yarn/cache",
    "lint": "yarn hela lint",
    "fmt": "yarn hela format",
    "build:all": "yarn workspaces foreach -pt run build",
    "build:bundle": "PKG_PATH=\"$0\" rollup -c"
  },
  "dependencies": {
    "@auto-it/all-contributors": "^7.17.0",
    "@auto-it/conventional-commits": "^7.17.0",
    "@auto-it/first-time-contributor": "^7.17.0",
    "@auto-it/npm": "^7.17.0",
    "@auto-it/omit-commits": "^7.17.0",
    "@auto-it/released": "^7.17.0",
    "@hela/cli": "workspace:*",
    "@hela/core": "portal:*",
    "@hela/dev": "portal:*",
    "@tunnckocore/prettier-config": "^1.1.0",
    "@tunnckocore/utils": "^1.2.0",
    "@yarnpkg/pnpify": "^2.0.0-rc.12",
    "all-contributors-cli": "^6.11.1",
    "auto": "^7.17.0",
    "babel-eslint": "^10.0.3",
    "cac": "^6.5.3",
    "eslint": "^6.7.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-node": "^0.3.2",
    "eslint-mdx": "^1.6.3",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-markdown": "^1.0.1",
    "eslint-plugin-mdx": "^1.6.3",
    "eslint-plugin-no-use-extend-native": "^0.4.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-unicorn": "^14.0.1",
    "mri": "^1.1.4",
    "prettier": "^1.19.1",
    "rollup": "^1.27.8"
  },
  "devDependencies": {
    "@types/eslint": "6.1.3",
    "@types/mri": "1.1.0",
    "@types/prettier": "1.19.0"
  },
  "renovate": {
    "extends": "@tunnckocore"
  },
  "preconstruct": {
    "packages": [
      "commands/*",
      "packages/*",
      "presets/*",
      "!packages/cli"
    ]
  },
  "auto": {
    "repo": "hela",
    "owner": "tunnckocore",
    "noVersionPrefix": true,
    "name": "Charlike Mike Reagent",
    "email": "opensource@tunnckocore.com",
    "onlyPublishWithReleaseLabel": true,
    "labels": [
      {
        "name": "infra",
        "releaseType": "skip"
      },
      {
        "name": "devDep",
        "changelogTitle": "üî© Dependency Updates",
        "releaseType": "none"
      },
      {
        "name": "deps",
        "changelogTitle": "üî© Dependency Updates",
        "releaseType": "patch"
      },
      {
        "name": "documentation",
        "changelogTitle": "üóíÔ∏è Documentation",
        "releaseType": "none"
      },
      {
        "name": "core",
        "changelogTitle": "üì¶ Core",
        "releaseType": "none"
      }
    ],
    "plugins": [
      [
        "npm",
        {
          "subPackageChangelogs": true
        }
      ],
      [
        "all-contributors",
        {
          "types": {
            "plugin": [
              "**/commands/**/*",
              "**/presets/**/*"
            ],
            "code": [
              "**/commands/**/*",
              "**/packages/**/*",
              "**/presets/**/*",
              "**/package.json",
              "**/tsconfig*.json"
            ]
          }
        }
      ],
      [
        "omit-commits",
        {
          "subject": [
            "chore",
            "update readme",
            "Merge branch"
          ],
          "email": [
            "olsten.larck@gmail.com",
            "mameto2011@gmail.com",
            "5038030+olstenlarck@users.noreply.github.com"
          ]
        }
      ],
      "released",
      "conventional-commits"
    ]
  }
}
